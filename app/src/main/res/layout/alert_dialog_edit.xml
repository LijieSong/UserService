<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/item_height_15"
        android:background="@drawable/shape_corner_gray_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text_D_color3"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/item_height_10"
            android:layout_marginTop="@dimen/item_height_20"
            android:layout_marginRight="@dimen/item_height_10"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/fill_in_the_reason_for_the_inability_to_serve"
            android:textColor="@color/text_sign_in_color"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/item_height_20"
            android:layout_marginBottom="@dimen/item_height_30"
            android:background="@color/empty_car_order_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/dialog_content"
                style="@style/Text_B_color3"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_gravity="center|left|top"
                android:background="@null"
                android:textCursorDrawable="@drawable/bg_curse"
                android:paddingLeft="@dimen/item_height_15"
                android:paddingRight="@dimen/item_height_15"
                android:hint="@string/within_100_words"
                android:gravity="center|left|top"
                android:textColorHint="@color/text_hint_color"
                android:minHeight="@dimen/item_height"
                android:paddingTop="@dimen/item_height_20"
                android:paddingBottom="@dimen/item_height_20"
                android:textColor="@color/text_sign_in_color"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="150dp"
                android:layout_height="@dimen/item_height"
                android:layout_gravity="center"
                android:background="@drawable/bg_cancel_btn"
                android:layout_marginLeft="@dimen/item_height_10"
                android:layout_marginRight="@dimen/cui_corners_5"
                android:gravity="center"
                android:text="@string/dialog_negative_button_text"
                android:textColor="@color/dialog_title_text_color"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/dialog_confirm"
                android:layout_width="150dp"
                android:layout_height="@dimen/item_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/cui_corners_5"
                android:layout_marginRight="@dimen/item_height_10"
                android:background="@drawable/bg_confirm_btn"
                android:gravity="center"
                android:text="@string/dialog_positive_button_text"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>