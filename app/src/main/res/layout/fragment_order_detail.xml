                android:background="@drawable/bg_main_up"
                android:gravity="center"
                android:text="@string/service_completion"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_service_second_complete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/item_height_10"
                android:gravity="center"
                android:text="@string/amount_receivable"
                android:textColor="@color/text_sign_in_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/rmb"
                android:textColor="@color/unable_to_serve_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_amount_receivable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/cui_corners"
                android:layout_marginRight="@dimen/cui_corners_5"
                android:layout_weight="1"
                android:gravity="center|left"
