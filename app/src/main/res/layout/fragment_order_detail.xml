            tools:visibility="gone">

            <ImageView
                android:id="@+id/iv_navi_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/item_height_10"
                android:src="@drawable/icon_navition" />

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/item_height"
                android:layout_gravity="center"
                android:background="@color/base_activity_bg" />

            <ImageView
                android:id="@+id/iv_call_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/item_height_10"
                android:src="@drawable/icon_call_user" />

            <TextView
                android:id="@+id/tv_start_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/unable_to_serve_color"
                android:gravity="center"
                android:text="@string/start_service"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_service_completed_need_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/iv_call_service_need_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/item_height_10"
                android:src="@drawable/icon_call_user" />

            <TextView
                android:id="@+id/tv_need_second_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/unable_to_serve_color"
                android:gravity="center"
                android:text="@string/need_secondary_service"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_service_no_need_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
